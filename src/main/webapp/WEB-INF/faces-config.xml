<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <lifecycle>       
        <phase-listener>
            frontend.web.listeners.AuthenticationPhaseListener
        </phase-listener>
    </lifecycle>     
    <factory>
        <exception-handler-factory>frontend.web.listeners.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
    </factory>
    <application>
        <locale-config>
            <default-locale>en</default-locale>          
        </locale-config>    
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>ConfirmationMessages</base-name>
            <var>confirmMsgs</var>            
        </resource-bundle>
        <resource-bundle>
            <base-name>access</base-name>
            <var>accessProp</var>
        </resource-bundle>
        <message-bundle>errormessages</message-bundle>           
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>fail</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>forgot</from-outcome>
            <to-view-id>/remindpassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/site/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>siteindex</from-outcome>
            <to-view-id>/site/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/site/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>mainpanel</from-outcome>
            <to-view-id>/panel/cpanel.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
        <navigation-case>
            <from-outcome>articlesList</from-outcome>
            <to-view-id>/articles/articleslist.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>articlecategories</from-outcome>
            <to-view-id>/articles/articlecategories.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>authorslist</from-outcome>
            <to-view-id>/articles/authorslist.xhtml</to-view-id>
            <redirect/>
        </navigation-case>        
        <navigation-case>
            <from-outcome>videolist</from-outcome>
            <to-view-id>/video/videolist.xhtml</to-view-id>
            <redirect/>
        </navigation-case>  
        <navigation-case>
            <from-outcome>galleries</from-outcome>
            <to-view-id>/gallery/galleries.xhtml</to-view-id>
            <redirect/>
        </navigation-case>      
    </navigation-rule>        
</faces-config>
